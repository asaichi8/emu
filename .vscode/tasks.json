{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/core/cpu/*.cpp",
                "${workspaceFolder}/core/ppu/*.cpp",
                //"${workspaceFolder}/core/apu/*.cpp",
                "${workspaceFolder}/core/memory/*.cpp",
                "${workspaceFolder}/core/loader/*.cpp",
                "${workspaceFolder}/app/*.cpp",
                "${workspaceFolder}/app/display/*.cpp",
                "${workspaceFolder}/app/display/SDL/*.cpp",
                "${workspaceFolder}/demos/*.cpp",
                "${workspaceFolder}/imgui/*.cpp",
                "-I${workspaceFolder}/app",
                "-I${workspaceFolder}/app/display",
                "-I${workspaceFolder}/app/display/SDL",
                "-I${workspaceFolder}/core/cpu",
                "-I${workspaceFolder}/core/ppu",
                "-I${workspaceFolder}/core/apu",
                "-I${workspaceFolder}/core/loader",
                "-I${workspaceFolder}/core/memory",
                "-I${workspaceFolder}/demos",
                "-I${workspaceFolder}/include/imgui",
                "-I${workspaceFolder}/include",
                "-I/usr/include/SDL2",
                "-D_REENTRANT",
                "-o",
                "${workspaceFolder}/bin/emu",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "args": ["rebuild"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Rebuilds the Makefile."
        }
    ],
    "version": "2.0.0"
}